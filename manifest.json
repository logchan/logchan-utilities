{
	"manifest_version": 2,
	"name": "logchan utilities",
	"version": "1.0",
	"homepage_url": "https://github.com/logchan/logchan-utilities",
	"author": "logchan",
	"description": "Some utilities that logchan uses. Icons made by Freepik from www.flaticon.com is licensed by CC 3.0 BY.",
	"icons": {
		"16": "icon/science16.png",
		"32": "icon/science32.png",
		"128": "icon/science128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"copytitleandurl.js"
			]
		},
		{
			"matches": [
				"*://www.pixiv.net/*"
			],
			"js": [
				"alter_pushState.js",
				"fxxkgtm.js",
				"illustdl/illustdl.js",
				"illustdl/pixivdl.js",
				"utils/downloader.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://twitter.com/*"
			],
			"js": [
				"alter_pushState.js",
				"illustdl/illustdl.js",
				"illustdl/twitterdl.js",
				"utils/downloader.js"
			],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": [
			"utils/downloader.js",
			"logchanutil_background.js",
			"illustdl/illustdl_background.js"
		]
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options/options.html",
		"open_in_tab": true
	},
	"permissions": [
		"contextMenus",
		"storage",
		"history",
		"downloads"
	]
}